{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "jsf-handlers/*/node_modules",
    "jsf-handlers/*/handlers/*/*/api/**/*",
    "jsf-themes/node_modules",
    "jsf-themes/generators",
    "jsf-themes/scripts"
  ]
}
